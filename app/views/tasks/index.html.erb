<% provide(:title, 'Tasks') %>
<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Day</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Category</th>
      <th>Comment</th>
      <th>Priority</th>
      <th>Completion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.day_id %></td>
        <td><%= task.start_time.strftime('%a, %b %d, %Y %l:%M%p') %></td>
        <td><%= task.end_time.strftime('%a, %b %d, %Y %l:%M%p') %></td>
        <td><%= task.category %></td>
        <td><%= task.comment %></td>
        <td><%= task.priority %></td>
        <td><%= task.completion %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
